<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/llGoal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#D0D4BA"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent">



        <TextView
            android:layout_marginTop="70dp"
            android:id="@+id/Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:fontFamily="@font/petrona"
            android:text="@string/notifications"
            android:textColor="@color/black"
            android:textFontWeight="800"
            android:textSize="24sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cardBack" />

        <TextView
            android:id="@+id/tv_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:layout_marginEnd="20dp"
            android:fontFamily="@font/canaro_light"
            android:maxLines="2"
            android:text="13 notifications in the past 5 days"
            android:textColor="@color/color_Primary"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/pBar">

        </TextView>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>